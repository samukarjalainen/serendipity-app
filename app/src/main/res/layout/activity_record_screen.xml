<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <ToggleButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textOff=""
        android:textOn=""
        android:id="@+id/toggleRecord"
        android:background="@drawable/record_toggle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusable="false" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_gravity="center_horizontal"
        android:textSize="60dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/toggleRecord"
        android:layout_centerHorizontal="true"
        android:textColor="#808080"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/playLayout"
        android:layout_below="@+id/toggleRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp">


        <SeekBar
            android:layout_width="366dp"
            android:layout_height="40dp"
            android:id="@+id/seekBar"
            android:layout_gravity="left|top"
            android:visibility="gone"/>
        <ToggleButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:textOff=""
            android:textOn=""
            android:id="@+id/togglePlay"
            android:background="@drawable/play_toggle"
            android:layout_gravity="center"
            android:checked="false"
            android:visibility="gone"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:layout_gravity="center|bottom|right"
            android:background="@drawable/record_upload_image_button"
            android:visibility="gone"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="center|top|right"
            android:background="@drawable/download"
            />
    </FrameLayout>
</RelativeLayout>
